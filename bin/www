#!/usr/bin/env node

/**
 * Module dependencies.
 */

// 添加全局错误处理，捕获未处理的异常
process.on('uncaughtException', (error) => {
  console.error('未捕获的异常:', error);
  console.error('错误堆栈:', error.stack);
  process.exit(1);
});

process.on('unhandledRejection', (reason, promise) => {
  console.error('未处理的 Promise 拒绝:', reason);
  console.error('Promise:', promise);
  process.exit(1);
});

var app = require('../app');
var debug = require('debug')('express:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 * 云托管环境默认使用 80 端口
 */

var port = normalizePort(process.env.PORT || '80');
app.set('port', port);

console.log('==================================');
console.log('应用启动中...');
console.log(`环境: ${process.env.NODE_ENV || 'development'}`);
console.log(`端口: ${port}`);
console.log('==================================');

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * 初始化 express-ws（必须在服务器创建之后）
 */
try {
  const expressWs = require('express-ws');
  expressWs(app, server);
  console.log('✓ express-ws WebSocket 服务器已初始化');
} catch (error) {
  console.error('✗ express-ws 初始化失败:', error.message);
  console.error('错误堆栈:', error.stack);
  console.warn('⚠️  WebSocket 功能将不可用');
}

/**
 * 初始化 Socket.IO
 */
try {
  const { Server } = require('socket.io');
  const io = new Server(server, {
    cors: {
      origin: '*',
      methods: ['GET', 'POST']
    },
    path: '/socket.io/',
    transports: ['websocket', 'polling']
  });

  // 将 io 实例挂载到 app 上，供路由使用
  app.set('io', io);

  console.log('✓ Socket.IO 服务器已初始化');

  // 初始化 Socket.IO 路由处理
  if (app.initSocketIO) {
    app.initSocketIO();
  }
} catch (error) {
  console.error('✗ Socket.IO 初始化失败:', error.message);
  console.error('错误堆栈:', error.stack);
  // 如果 Socket.IO 初始化失败，应用仍然可以启动（只是没有 Socket.IO 功能）
  console.warn('⚠️  应用将在没有 Socket.IO 支持的情况下启动');
}

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  console.log('==================================');
  console.log('✓ 服务器启动成功');
  console.log(`✓ 监听地址: ${bind}`);
  console.log(`✓ 健康检查: http://localhost:${port}/health`);
  console.log(`✓ WebSocket测试: ws://localhost:${port}/api/realtime-voice/test`);
  console.log(`✓ WebSocket识别: ws://localhost:${port}/api/realtime-voice/stream`);
  console.log('==================================');
  debug('Listening on ' + bind);
}
